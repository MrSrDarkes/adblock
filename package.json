{
  "name": "adblock",
  "version": "1.0.0",
  "description": "Adblock para Windows - bloqueo por archivo hosts",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win"
  },
  "build": {
    "appId": "com.adblockcoffe.app",
    "productName": "Adblock Coffe",
    "win": {
      "target": "nsis",
      "icon": "Icon/adblock-icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      "Update-Hosts.ps1",
      "Icon"
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  }
}
